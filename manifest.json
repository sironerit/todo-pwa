{
  "name": "シンプルなToDoアプリ PWA",
  "short_name": "ToDo PWA",
  "description": "オフラインでも使えるシンプルなToDoリストアプリ",
  "start_url": ".", // アプリ起動時に開くURL (現在のディレクトリのindex.html)
  "display": "standalone", // アプリをスタンドアロンモードで表示 (ブラウザUIを隠す)
  "background_color": "#f3f4f6", // スプラッシュスクリーンの背景色 (bg-gray-100)
  "theme_color": "#3b82f6", // アプリのテーマカラー (blue-500)
  "icons": [
    {
      "src": "icons/icon-192x192.png", // ホーム画面用アイコン (例)
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable" // マスク可能なアイコン
    },
    {
      "src": "icons/icon-512x512.png", // スプラッシュスクリーン用アイコン (例)
      "sizes": "512x512",
      "type": "image/png"
    }
  ]
}
